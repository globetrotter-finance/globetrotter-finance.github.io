---
// Contact Hero Section
// ------------
// Description: A hero section with a contact form

// Components
// - Layout
import Section from '../../ui/Section.astro'
import Row from '../../ui/Row.astro'
import Col from '../../ui/Col.astro'
// - UI
import Form from '../contact/BasicForm.astro'

// Props
type Props = {
	id?: string
	title?: string
	text?: string
	classes?: string
}
const { id, title, text, classes } = Astro.props
---

<Section id={id} classes={classes}>
	<Row>
		<Col span="6" classes={`self-center`}>
			<header class="max-w-xl">
				<h2 set:html={title} />
			</header>
		</Col>
		<Col span="6" classes={`self-center`}>
			<body>
				<a href="mailto:{text}?subject='Sign Up for Services'"><h1 set:html={text} /></a>
			</body>
		</Col>
	</Row>
</Section>
